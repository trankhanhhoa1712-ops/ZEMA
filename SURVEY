  <script>
    function calculateAge() {
      const dobInput = document.getElementById('dob').value;
      if (!dobInput) return;
      const [day, month, year] = dobInput.split('/').map(Number);
      const today = new Date();
      let age = today.getFullYear() - year;
      const m = today.getMonth() + 1 - month;
      if (m < 0 || (m === 0 && today.getDate() < day)) age--;
      document.getElementById('ageDisplay').textContent = "Tuổi: " + age;
    }

    function calculateAverage() {
      const form = document.getElementById('surveyForm');
      const formData = new FormData(form);
      let total = 0, count = 0;
      for (let value of formData.values()) {
        total += parseInt(value);
        count++;
      }
      if (count === 0) return alert("Vui lòng chọn ít nhất 1 tiêu chí.");
      const average = (total / count).toFixed(1);
      document.getElementById('average-score').textContent = average;
      document.getElementById('result').style.display = 'block';
    }
  </script>
